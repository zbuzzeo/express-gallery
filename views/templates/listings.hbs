<div id="listingsContainer">
  {{#with featured}}
  {{!-- in the object being passed in, assign the first photo selected to a "feature" key --}}
  <div id="featuredContainer">
    <div id="featured"><img src={{this.link}} alt="" srcset="" class="image"></div>
  </div>
  {{/with}}

  <div id="otherContainer">
    {{#each listings}}
    {{!-- assign the rest of the queried photos here... --}}
    <div class="listing">
      <div class="thumbnail"><img src={{this.link}} alt="" srcset="" class="image"></div>
      <p class="author">{{this.author}}<span class="bullet"> â€¢ </span><span class="stamp">{{this.updated_at}}</span></p>
      <p class="description">{{this.description}}</p>
    </div>
    {{/each}}
</div>